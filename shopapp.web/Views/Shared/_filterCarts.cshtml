@model PageInfo
<div class="d-flex">
    @foreach (var filter in @Model.Selected.Categories)
    {
        <div class="border border-dark d-flex rounded align-middle me-2 p-1 align-middle">
            <h6 class="m-0">@filter</h6>
            <form action=@Model.Url method="get" class="d-flex" style="align-items:center;">
                @if (@Model.Selected.Search != null)
                {
                    <input type="hidden" value=@Model.Selected.Search name="q">
                }
                @if (Model.Selected.Categories.Length != 0)
                {
                    @foreach (var c in Model.Selected.Categories)
                    {
                        if (c != filter)
                        {
                            <input type="hidden" value="@c" name="c">
                        }

                    }

                }
                @if (@Model.Selected.Price != null)
                {
                    <input type="hidden" value=@Model.Selected.Price name="prc">
                }
                @if (@Model.Selected.Sort != 1)
                {
                    <input type="hidden" value=@Model.Selected.Sort name="s">
                }
                <button type="submit" class="btn-close" style="width:5px;height:5px;"></button>
            </form>

        </div>

    }
    @if (Model.Selected.Search != null)
    {
        <div class="border border-dark d-flex rounded align-middle me-2 p-1 align-middle">

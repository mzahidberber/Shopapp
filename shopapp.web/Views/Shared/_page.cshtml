@model PageInfo
<div class="row">
    <div class="col">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.CurrentCategory != null)
                {
                    <li class="page-item @(1>=Model.CurrentPage?"disabled":"")">
                        <a class="page-link" href="@Model.Url/@Model.CurrentCategory?page=@(Model.CurrentPage-1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item @(1>=Model.CurrentPage?"disabled":"")">
                        <a class="page-link" href="@Model.Url?page=@(Model.CurrentPage-1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }
                @{
                    var total = Model.TotalPages();
                    var cp = Model.CurrentPage;

                }

                @if (cp - 5 > 0)
                {
                    <li class="page-item"><a class="page-link" href="@Model.Url?page=@(cp-5)">@(cp - 5)</a></li>
                }



                @for (var i = cp > 3 ? cp - 3 : 0; i < (total > 3 ? (cp + 2 < total ? cp + 2 : total) : total); i++)
                {
                    @if (Model.CurrentCategory != null)
                    {
                        <li class="page-item @(@Model.CurrentPage==i+1?"active":"")"><a class="page-link" href="@Model.Url/@Model.CurrentCategory?page=@(i+1)">@(i + 1)</a></li>
                    }
                    else
                    {
                        <li class="page-item @(@Model.CurrentPage==i+1?"active":"")"><a class="page-link" href="@Model.Url?page=@(i+1)">@(i + 1)</a></li>
                    }

                }
                @if (cp + 5 <= total)
                {
                    <li class="page-item"><a class="page-link" href="@Model.Url?page=@(cp+5)">@(cp + 5)</a></li>
                }
                @if (Model.CurrentCategory != null)
                {
                    <li class="page-item @(Model.TotalPages()<=Model.CurrentPage?"disabled":"")">
                        <a class="page-link" href="@Model.Url/@Model.CurrentCategory?page=@(Model.CurrentPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item @(Model.TotalPages()<=Model.CurrentPage?"disabled":"")">
                        <a class="page-link" href="@Model.Url?page=@(Model.CurrentPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }


            </ul>
        </nav>
        <div />

        <div />

    </div>

</div>
@model int

<form action=@ViewBag.Url method="get">
    <input type="hidden" value="@ViewBag.Sort" name="s">
    <div class="mt-2">
        @await Component.InvokeAsync("CategoryFilter")
    </div>
    <hr>
    <div class="mt-2">
        <button id="priceBtn" type="button" class="btn btn-ligth w-100" style="text-align: start;">
            <div class="row">
                <div class="col-md-10">
                    Price
                </div>
                <div class="col-md-2">
                    <i id="priceArrow" class="fa-solid fa-caret-up ms-2"></i>
                </div>
            </div>

        </button>
            <div id="priceDiv" class="border p-3 mt-2 overflow-auto" style="height:220px;" >

            <div class="input-group d-flex">

                    <div class="input-group mb-3 mt-2">
                        <input type="number" class="form-control" min="0" placeholder="Least" id="leastInput" @(ViewBag.SelectedPrice != null ? $"value={ViewBag.SelectedPrice.Split("-")[0]}" : "") oninput="">
                        <input type="number" class="form-control" min="0" placeholder="Most" id="mostInput" @(ViewBag.SelectedPrice != null ? $"value={ViewBag.SelectedPrice.Split("-")[1]}" : "")>
                        <input type="hidden" id="prcInput" @(ViewBag.SelectedPrice != null ? $"value={ViewBag.SelectedPrice} name=prc" : "")>
                    </div>
            </div>
            <div style="display: inline;" class="d-flex flex-column">
                @{
                    var invertalprice = (Model - 0) / 4;
                }
                    
                @for (int i = 0; i < Model; i += invertalprice)
                {
                        <div class="prcRadio">
                        <input type="radio" @(ViewBag.SelectedPrice == $"{i}-{i + invertalprice}" ? "checked" : "")>
                        <label class="ms-2">@i-@(i + invertalprice)</label>
                    </div>
                }
            </div>
        </div>
    </div>


<hr>
<button class="btn btn-light mt-2 w-100 border">Filter</button>
</form>


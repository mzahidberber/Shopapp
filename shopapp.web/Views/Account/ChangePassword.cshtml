
@model ChangePasswordModel

<div class="container d-flex flex-column justify-content-center" style="height:35rem;">

    <div class="singCard">
        <div style="width:18rem;">
            @if (TempData["SingInMessage"] != null)
            {
                <partial name="_resultMessage" model="@(TempData.Get<AlertMessage>("SingInMessage"))" />
            }
        </div>

        <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Change Password</h5>
                <form asp-controller="Account" asp-action="ChangePassword" method="post" class="mt-3">
                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    <input type="hidden" asp-for="userName" value=@Model.userName >
                    <div class="form-group mt-3">
                        <input asp-for="OldPassword" placeholder="Old Password" class="form-control">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input asp-for="Password" placeholder="Password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="RePassword" placeholder="RePassword" class="form-control">
                        <span asp-validation-for="RePassword" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="mt-3 col-12">
                            <button class="btn btn-primary w-100" type="submit">Change Password</button>

                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>

</div>


@section Scripts
    {
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
@model ProductModel

<style>
	.NavLink {
		text-decoration: none;
		color: black;
	}
	.price{
		color:darkblue;
	}
</style>
@await Component.InvokeAsync("NavMainCategory")
<div class="d-flex mt-3">
		<h6 class="ms-2">></h6>
	<a class="ms-2 NavLink" href=/@Model.MainCategory.Url>@Model.MainCategory.Name</a>
		
		<h6 class="ms-2">></h6>
	<a class="ms-2 NavLink" href=/@Model.Category.Url>@Model.Category.Name</a>
	<h6 class="ms-2">></h6>
	<a class="ms-2 NavLink" href=/@Model.SubCategory.Url>@Model.SubCategory.Name</a>
	<h6 class="ms-2">></h6>
	<a class="ms-2 NavLink">@Model.Name</a>
	
</div>
<div class="row">
	
	<div class="col-6 border rounded mt-3">
		<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
			<ol class="carousel-indicators">
				<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active">asd</li>
				@for (int i = 1; i < Model.Images.Count; i++)
				{
					<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to=@($"{i}")></li>
				}
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="~/img/@Model.Images[0].Url" >
				</div>
				@for (int i = 1; i < Model.Images.Count; i++)
				{
					<div class="carousel-item">
						<img class="d-block w-100" src="~/img/@Model.Images[i].Url">
					</div>
				}
				
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>

	</div>
	
	<div class="col-6 mt-3">
		
		

		<h1 class="h2 mt-4">@Model.Name</h1>
		<h1 class="h1 price mt-4">@(string.Format("{0:N0}", @Model.Price)) <span class="h6">TL</span></h1>


		@*@if (User.Identity.IsAuthenticated)
		{*@
		<form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline mt-4">
			<input type="hidden" name="productId" value="@Model.Id">
			<div class="row">
				
				<div class="col-md-9 p-0 ps-2">
					<button class="btn btn-primary btn-lg p-1 w-100" type="submit">
						Add Basket
					</button>
				</div>
				<div class="col-md-1 p-0">
					<input class="form-control" type="number" name="quantity" id="age" min="0" max="20" step="1" value="1">
				</div>
				<div class="col-md-2 p-0">
				</div>
			</div>


		</form>

		<div class="mt-3">
			@foreach (var f in Model.SubCategoryFeatureValues)
			{
				<div class="row">
					<div class="col-md-10">
						<hr class="m-2">
						<div class="d-flex">
							<h2 class="h5 ms-2">@f.SubCategoryFeature.Name : </h2>
							<h2 class="h5 ms-2">@f.Value</h2>
						</div>
					</div>
				</div>
			}
		</div>
	</div>


	<p class="mt-3">@Html.Raw(Model.Description)</p>


</div>


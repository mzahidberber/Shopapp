@model ProductAndCategories



<div class="container">
    <div class="row">
        <div class="col-2">
            @*
            @await Html.PartialAsync("_search")
            @await Html.PartialAsync("_categories",Model.Categories)
            *@
            
            @await Html.PartialAsync("_filter",new FilterInfo{
                Categories=Model.Categories,
                FilterPrice=new FilterPrice{
                    LeastPrice=100,
                    MostPrice=500
                }
                
            })

        </div>
        <div class="col-10">
            <div class="mt-1 mb-1">
                    <div class="d-flex justify-content-end">
                        @await Html.PartialAsync("_sortBox",new List<Sort>{
                        new Sort{Name="Suggested",Value="1"},
                    new Sort{Name="Descending by Price",Value="2"},
                    new Sort{Name="Increasing by Price",Value="3"},
                    new Sort{Name="Top Seller",Value="4"},
                    new Sort{Name="Most Liked",Value="5"},
                        })

                </div>
            </div>
            
            <div class="row mt-1 me-2 ms-2">
                @await Html.PartialAsync("_productList",Model.Products)
            </div>

            @await Html.PartialAsync("_page",Model.PageInfo)
        </div>






</div>
